// Program 2: Stop and Wait Protocol

#include <iostream>
#include <unistd.h>
using namespace std;

int main()
{
    int frames[] = {1, 2, 3, 4};

    cout << "Sender\t\tReceiver\n\n";

    for (int i = 0; i < 4; i++)
    {
        cout << "Sending Frame " << frames[i] << "\t";
        usleep(300000);
        cout << "Received Frame " << frames[i] << endl;

        usleep(300000);
        cout << "Acknowledgement " << frames[i] << endl
             << endl;
    }

    return 0;
}
